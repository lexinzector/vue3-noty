{
	"name": "@lexinzector/vue3-noty",
	"description": "Noty plugin for Vue3",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lexinzector/vue3-noty.git"
	},
	"homepage": "https://github.com/lexinzector/vue3-noty",
	"bugs": {
		"url": "https://github.com/lexinzector/vue3-noty/issues"
	},
	"keywords": [
		"vuejs",
		"vue",
		"vue3",
		"noty",
		"notifications",
		"toast"
	],
	"author": "Alexey (lexinzector) Mikhalev <lexin.ucoz.ru@gmail.com>",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build-lib": "vite build --config vite.config.lib.js",
		"build-demo": "vite build --config vite.config.demo.js",
		"dev": "vite --config vite.config.demo.js",
		"deploy": "npm run build-demo && gh-pages -d dev/demo"
	},
	"main": "./dist/vue3-noty.cjs.js",
	"module": "./dist/vue3-noty.es.js",
	"unpkg": "./dist/vue3-noty.umd.js",
	"exports": {
		".": {
			"import": "./dist/vue3-noty.es.js",
			"require": "./dist/vue3-noty.cjs.js"
		}
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"peerDependencies": {
		"vue": "^3.5.28"
	},
	"dependencies": {
		"bootstrap": "^5.3.8",
		"noty": "^3.1.4"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "^6.0.4",
		"gh-pages": "^6.3.0",
		"unplugin-auto-import": "^21.0.0",
		"vite": "^7.3.1"
	}
}
